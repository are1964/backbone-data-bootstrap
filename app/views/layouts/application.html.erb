<!DOCTYPE html>
<html>
  <head>
    <title>Backbone Data Bootstrap</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='container'>
      <%= yield %>
    </div>
    <%= yield :javascript %>
    <%= javascript_tag do %>
      $(function() {
        if(window.App.debug) {
          $('body').addClass('debug');
        }
      });
    <% end %>
  </body>
</html>
